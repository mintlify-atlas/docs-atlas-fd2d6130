  "keyFeatures": [
    "Brotli compression for 13-25% smaller binaries",
    "Multiple source directory bundling via go generate",
    "Optional lazy decompression on first read",
    "WebAssembly (wasm/js) architecture support",
    ".gitignore integration for file exclusion",
    "HTTP file server support",
    "Virtual file system with Walk, Open, and Stat methods",
    "Development mode for rapid iteration",
    "Configurable compression levels (1-11)",
    "Glob pattern support for include/exclude"
  ],
  "publicApiSurface": [
    "broccoli CLI command",
    "Broccoli.Open(path) - Opens a file from the virtual file system",
    "Broccoli.Stat(path) - Returns file information",
    "Broccoli.Walk(root, walkFn) - Walks the file tree",
    "Broccoli.Serve(dir) - Returns an http.Handler for serving files",
    "Broccoli.Development(mode) - Enables/disables development mode",
    "fs.New(opt, bundle) - Creates a new virtual file system from bundle",
    "fs.Pack(files, quality) - Compresses files for bundling"
  ]
